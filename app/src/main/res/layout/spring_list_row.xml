<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spring_item__layout"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/spring_item_row"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/spring_item_img"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_gravity="end"
            android:layout_weight="1"

            android:background="@mipmap/app_mayan_logo_01"/>

        <LinearLayout
            android:id="@+id/spring_item_txt_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/spring_item_title"
                android:layout_weight="1"
                android:fontFamily="@font/amatic_sc"
                android:textSize="30sp"
                android:textColor="@android:color/black"

                android:text="כותרת"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/spring_item_describe"
                android:layout_weight="1"
                android:fontFamily="@font/amatic_sc"
                android:textSize="25sp"
                android:textColor="@android:color/black"

                android:text="תיאור קצר של המעין וכו וכו וכו"/>
        </LinearLayout>

    </TableRow>

</TableLayout>