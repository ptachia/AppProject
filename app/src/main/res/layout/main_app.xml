<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/area1"
        android:layout_width="180dp"
        android:layout_height="179dp"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="48dp"
        android:background="@mipmap/icon_area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deepness1"
        android:layout_width="130dp"
        android:layout_height="131dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:background="@mipmap/icon_deepness"
        app:layout_constraintBottom_toBottomOf="@+id/area1"
        app:layout_constraintStart_toEndOf="@+id/area2" />

    <Button
        android:id="@+id/cold1"
        android:layout_width="117dp"
        android:layout_height="126dp"
        android:layout_marginTop="136dp"
        android:background="@mipmap/icon_area"
        app:layout_constraintStart_toEndOf="@+id/level1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/level1"
        android:layout_width="162dp"
        android:layout_height="167dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:background="@mipmap/icon_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/area2"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginBottom="104dp"
        android:layout_marginEnd="268dp"
        android:layout_marginRight="268dp"
        android:background="@mipmap/icon_area2"
        app:layout_constraintBottom_toBottomOf="@+id/area1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/deepness2"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_marginBottom="72dp"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:background="@mipmap/icon_deepness2"
        app:layout_constraintBottom_toBottomOf="@+id/deepness1"
        app:layout_constraintStart_toStartOf="@+id/deepness1" />

    <Button
        android:id="@+id/cold2"
        android:layout_width="55dp"
        android:layout_height="62dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginTop="64dp"
        android:background="@mipmap/icon_cold2"
        app:layout_constraintEnd_toEndOf="@+id/cold1"
        app:layout_constraintTop_toTopOf="@+id/cold1" />

    <Button
        android:id="@+id/level2"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginBottom="96dp"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:background="@mipmap/icon_level2"
        app:layout_constraintBottom_toBottomOf="@+id/level1"
        app:layout_constraintStart_toStartOf="@+id/level1" />


    <Button
        android:id="@+id/button10"
        android:layout_width="137dp"
        android:layout_height="46dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/ba_li_maayan"
        app:layout_constraintBottom_toTopOf="@+id/area1"
        app:layout_constraintEnd_toStartOf="@+id/deepness2"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

    <Button
        android:id="@+id/start_search"
        android:layout_width="36dp"
        android:layout_height="67dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/half_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537" />

    <Button
        android:id="@+id/start_search1"
        android:layout_width="19dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/group_66"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

</android.support.constraint.ConstraintLayout>